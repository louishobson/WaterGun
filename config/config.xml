<OpenNI>

	<Licenses>
		<!-- Add application-specific licenses here 
		<License vendor="vendor" key="key"/>
		-->
	</Licenses>

	<Log writeToConsole="true" writeToFile="false">

		<!-- 0 - Verbose, 1 - Info, 2 - Warning, 3 - Error (default) -->
		<LogLevel value="1"/>

		<Masks>
			<Mask name="ALL" on="true"/>
		</Masks>

		<Dumps>
		</Dumps>

	</Log>

	<ProductionNodes>
	
		<!-- Set global mirror -->
		<GlobalMirror on="true"/>		

		<!-- Create user node -->		
		<Node type="User" />

	</ProductionNodes>

</OpenNI>
